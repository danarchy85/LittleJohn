#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "LittleJohn"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# (If you use this, don't forget to add pry to your Gemfile!)
# require "pry"
# Pry.start

appname = if ! ARGV[0]
            print 'Enter your app name (case sensitive): '
            appname = STDIN.gets.chomp
          else
            ARGV[0]
          end

app = Module.new do
  def self.new(appname)
    self.instance_variable_set('@name', appname)
    extend LittleJohn
  end

  def self.name
    @name
  end
end
app.new(appname)
ARGV.shift # Reset to empty ARGV for __FILE__

puts 'Initiating console... '
require "irb"
IRB.start(__FILE__)
